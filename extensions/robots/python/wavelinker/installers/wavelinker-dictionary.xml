<extension 
    name="WaveLinker - Dictionary"
    description="Adds buttons that links the selected text to a matching definition."
    thumbnailUrl="http://wavelinker.appspot.com/preview.png"> 
  <author name="Google Wave Team"/> 
  <menuHook location="TOOLBAR" text="Link to definition"
      iconUrl="http://wavelinker.appspot.com/images/icon_dictionary.png"> 
    <annotateSelection key="robot.wavelinker.request" value="search/m-w.com"/> 
    <addParticipants> 
      <participant id="wavelinker@appspot.com"/> 
    </addParticipants> 
  </menuHook> 
</extension> 
