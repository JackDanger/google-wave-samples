<extension
    name="LCA 2010 Bot"
    thumbnailUrl="http://www.lca2010.org.nz/images/logo.png"
    description="Makes it easy to create new LCA waves.">
  <author name="Google"/> 
  <menuHook location="newwavemenu" text="New LCA Wave (blank)">
      <createNewWave>
        <participant id="lca2010-bot+newwave@appspot.com" />
      </createNewWave>
  </menuHook>
  <menuHook location="newwavemenu" text="New LCA Wave (event)">
      <createNewWave>
        <participant id="lca2010-bot+newwave-event@appspot.com" />
      </createNewWave>
  </menuHook>
</extension>
