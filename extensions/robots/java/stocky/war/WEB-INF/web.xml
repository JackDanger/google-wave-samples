<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

  <servlet>
    <servlet-name>robot</servlet-name>
    <servlet-class>robot.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>robot</servlet-name>
    <url-pattern>/_wave/robot/jsonrpc</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>update</servlet-name>
    <servlet-class>robot.UpdateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>update</servlet-name>
    <url-pattern>/_wave/robot/fetchupdate</url-pattern>
  </servlet-mapping>

</web-app>
