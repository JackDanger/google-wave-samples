  function modeSwitch() {
    if (!waveMode || !adminPanel) return;
    switch (waveMode) {
      case wave.Mode.PLAYBACK:
        adminPanel.removeEditingUI_();
        break;
      case wave.Mode.EDIT:
        adminPanel.addEditingUI_();
        break;
      case wave.Mode.VIEW:
        adminPanel.removeEditingUI_();
        break;
    }
  }

  function inEditing() {
